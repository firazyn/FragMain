<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LifestyleFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/nama_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lifestyle"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <TextView
        android:id="@+id/desc_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/membahas_gaya_hidup"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ke_halaman_activity"/>
    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tampilkan_sebuah_dialog"/>
</LinearLayout>